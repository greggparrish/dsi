- provide(:title, "Image: #{@image.title}")
%header.blur
  .blur{style: "background-image: url(#{@image.file.sm_rect})"}
  .container
    =render 'shared/redbox'
    .row
      .col-12.col-md-8
        %h1
          =link_to 'IMAGE:', images_path
          =@image.title
.container#page-content
  .row
    .col-12.col-md-6.push-md-6
      =link_to @image.file.url do
        =image_tag @image.file.lg_square, alt: @image.title, title: @image.title
      -if @image.credit
        %p.image-credit
          Photo credit:
          =@image.credit
    .col-12.col-md-6.pull-md-6
      = @image.description.html_safe
  .row
    .col-12#more-images
      .container
        %h2 MORE FROM OUR GALLERY
        .row
          -@more.each do |i|
            .col-6.col-md-3
              =link_to (image_tag i.file.sm_sq, alt: i.title), image_path(i)



