%header.blur
  .blur{style: "background-image: url(#{@ni.image.rect_thumb})"}
  .container
    =render 'shared/redbox'
    .row
      .col-12.col-md-8
        %h1
          =link_to 'News:', news_items_path
          =@ni.title
        -if controller.action_name == 'index'
          %p= @header.text.html_safe
.container#page-content
  .row
    .col-12
      %p= @ni.date.strftime("%B %-d, %Y")
      %p= @ni.place
      %span= @ni.description.html_safe

