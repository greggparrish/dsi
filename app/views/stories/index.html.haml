=render 'shared/header'
.container#page-content
  #storygrid
    -@stories.each do |story|
      .grid-item
        =link_to (image_tag story.image.sm_sq, alt: story.name), story_path(story)
        %ul.list-unstyled.story-text
          %li
            %h2
              =link_to story.name, story_path(story)
          %li.place= story.place
          %li= truncate(story.story_text, length: 100, escape: false)
  .clearfix
  = paginate @stories
