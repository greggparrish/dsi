.container
  %p THE FACES OF DOMINICAN MUSIC
  -if user_signed_in?
    -if current_user.try(:admin?)
      %p
        = link_to 'New Story', new_story_path
  .row
    - @stories.each do |story|
      .col-12.col-sm-6.col-md-3
        .col-12
          =link_to (image_tag story.image.thumb), story_path(story)
        .col-12
          %ul.list-unstyled
            %li= story.name
            %li= story.place
            %li= truncate(story.story_text, length: 100)
        -if user_signed_in?
          -if current_user.try(:admin?)
            %p.admin-controls
              = link_to 'Show', story
              |
              = link_to 'Edit', edit_story_path(story)
              |
              = link_to 'Destroy', story, method: :delete, data: { confirm: 'Are you sure?' }
  = paginate @stories
