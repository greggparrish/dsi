%h3
  USERS
  (
  =link_to 'NEW', new_admin_user_path
  )
.row
  .col-12
    %table.table.table-hover#user-table
      %th email
      %th username
      %th role
      %th
      %th
      -@users.each do |u|
        %tr{ class: "#{u.role}" }
          %td
            =link_to u.email, edit_admin_user_path(u)
          %td= u.username
          %td= u.role
          %td
            = link_to fa_icon('trash'), admin_user_path(u), method: :delete, data: { confirm: 'DELETE: Are you sure?' }, class: 'admin-delete'
    = paginate @users
