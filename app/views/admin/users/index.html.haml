%h3 USERS
%table.table.table-hover#user-table
  %th email
  %th username
  %th role
  %th
  %th
  -@users.each do |u|
    %tr{ class: "#{u.role}" }
      %td= u.email
      %td= u.username
      %td= u.role
      %td
        = link_to "edit", edit_admin_user_path(u)
      %td
        = link_to 'delete', admin_user_path(u), method: :delete, data: { confirm: 'Are you sure?' }

