#admin.container
  -if user_signed_in? && current_user.admin?
    .row
      .col-12
        =render '/shared/admin_nav'
    %table.table.table-hover#news-table
      %th date
      %th title
      %th description
      %th
      -@news.each do |n|
        %tr
          %td= n.date.strftime("%B %-d, %Y")
          %td= n.title
          %td= truncate(n.description.html_safe, length: 50, escape: false)
          %td
            = link_to "edit", edit_admin_news_item_path(n.id)
            |
            = link_to 'delete', admin_news_item_path(n), method: :delete, data: { confirm: 'Are you sure?' } 



