- if @ni.errors.any?
  #error_explanation
    %h2
      = pluralize(@ni.errors.count, "error") 
      prohibited this item from being saved:
    %ul
      - @ni.errors.full_messages.each do |message|
        %li= message
.form-wrapper#ni-form
  = simple_form_for @ni do |f|
    .row
      .col-12.form-group
        = f.input :title
      .col-12.col-sm-6.form-group
        = f.button :submit, class: 'btn-success'
      -unless @ni.new_record?  
        .col-12.col-sm-6.form-group
          = link_to 'Delete', admin_ni_path(@ni), method: :delete, data: { confirm: 'Are you sure?'  }, class: 'btn btn-danger' 

