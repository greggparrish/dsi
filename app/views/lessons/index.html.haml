%header.blur
  .blur{style: "background-image: url(#{@header.image})"}
  .container
    =render 'shared/redbox'
    .row
      .col-12.col-md-8
        %h1= @header.title
        %p= @header.text.html_safe
.container#page-content
  .row
    -@lessons.each do |l|
      .col-12.col-sm-6.col-md-3
        .col-12
          =link_to (image_tag l.image.sq_thumb), lesson_path(l)
        .col-12
          %ul.list-unstyled
            %li= l.title
  = paginate @lessons

